<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@android:color/white"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="147dp"
            app:srcCompat="@drawable/ensino_digital_logo"
            android:id="@+id/imageView2"
            android:adjustViewBounds="true"

            android:background="@android:color/white" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:weightSum="1"
        android:background="@android:color/white">

        <EditText
            android:layout_width="164dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/nomeCadastroId"
            android:hint="Nome Completo"
            android:gravity="center"
            android:textStyle="normal|italic"
            android:textAlignment="center"
            android:textSize="20sp"
            android:background="@android:color/holo_orange_light"
            android:layout_below="@+id/imageView2"
            android:layout_marginTop="1dp"
            android:layout_weight="0.50" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="110"
        android:gravity="center"
        android:weightSum="1"
        android:background="@android:color/white">

        <EditText
            android:layout_width="164dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/emailCadastroId"
            android:hint="E-mail"
            android:gravity="center"
            android:textStyle="normal|italic"
            android:textAlignment="center"
            android:textSize="20sp"
            android:background="@android:color/holo_orange_light"
            android:layout_below="@+id/imageView2"
            android:layout_marginTop="1dp"
            android:layout_weight="0.50" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:weightSum="1"
        android:background="@android:color/white">

        <EditText
            android:layout_width="164dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/senhaCadastroId"
            android:hint="Senha"
            android:gravity="center"
            android:textStyle="normal|italic"
            android:textAlignment="center"
            android:textSize="20sp"
            android:background="@android:color/holo_orange_light"
            android:layout_below="@+id/imageView2"
            android:layout_marginTop="1dp"
            android:layout_weight="0.50"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:weightSum="1"
        android:background="@android:color/white">

        <EditText
            android:layout_width="164dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/confirmaSenhaCadastroId"
            android:hint="Confirmar Senha"
            android:gravity="center"
            android:textStyle="normal|italic"
            android:textAlignment="center"
            android:textSize="20sp"
            android:background="@android:color/holo_orange_light"
            android:layout_below="@+id/imageView2"
            android:layout_marginTop="1dp"
            android:layout_weight="0.50"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:weightSum="1"
        android:background="@android:color/white">



        <RadioGroup
            android:orientation="horizontal"
            android:layout_width="164dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:gravity="center"
            android:textStyle="normal|italic"
            android:textAlignment="center"
            android:textSize="20sp"
            android:background="@android:color/holo_orange_light"
            android:layout_below="@+id/imageView2"
            android:layout_marginTop="1dp"
            android:layout_weight="0.50"
            android:id="@+id/radioGroupId">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/chkMasculino"
                android:checked="true"
                android:background="@android:color/holo_orange_light"
                android:text="MascÃºlino"

                />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/chkFeminino"
                android:checked="true"
                android:background="@android:color/holo_orange_light"
                android:text="Feminino"
                />

            </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:weightSum="1"
        android:background="@android:color/white">

        <EditText
            android:layout_width="164dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/nascimentoCadastroId"
            android:hint="Data Nascimento"
            android:gravity="center"
            android:textStyle="normal|italic"
            android:textAlignment="center"
            android:textSize="20sp"
            android:background="@android:color/holo_orange_light"
            android:layout_below="@+id/imageView2"
            android:layout_marginTop="1dp"
            android:layout_weight="0.50"
            tools:inputType="date"
            android:inputType="date" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:weightSum="1"
        android:background="@android:color/white">

        <EditText
            android:layout_width="164dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/raId"
            android:hint="RA (Registro do Aluno)"
            android:gravity="center"
            android:textStyle="normal|italic"
            android:textAlignment="center"
            android:textSize="20sp"
            android:background="@android:color/holo_orange_light"
            android:layout_above="@+id/emailCadastroId"
            android:layout_below="@+id/imageView2"
            android:layout_marginTop="1dp"
            android:layout_weight="0.50"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="164dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:weightSum="1"
        android:background="@android:color/white">

        <Button
            android:layout_width="164dp"
            android:layout_height="wrap_content"
            android:text="Cadastrar"
            android:ems="10"
            android:id="@+id/btnFinalizarCadastro"
            android:gravity="center"
            android:textStyle="normal|italic"
            android:textAlignment="center"
            android:textSize="20sp"
            android:background="@android:color/holo_orange_light"
            android:layout_below="@+id/imageView2"
            android:layout_marginTop="5dp"
            android:layout_weight="0.50" />

    </LinearLayout><![CDATA[










    />




]]>
</LinearLayout>