<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@android:color/white">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ensino_digital_logo"
        android:id="@+id/imageView2"
        android:adjustViewBounds="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/emailCadastroId"
        android:hint="E-mail"
        android:textStyle="normal|italic"
        android:textAlignment="center"
        android:textSize="20sp"
        android:background="@android:color/holo_orange_light"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="1dp" />

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/senhaCadastroId"
        android:hint="Senha"
        android:textSize="20sp"
        android:textStyle="normal|italic"
        android:textAlignment="center"
        android:background="@android:color/holo_orange_light"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <Button
        android:text="Entrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/botaoLogar"
        android:layout_below="@+id/senhaCadastroId"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="1dp" />

    <TextView
        android:text="NÃ£o tem Cadastro? Clique Aqui"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvcadastroId"
        android:textStyle="normal|italic"
        android:textAlignment="center"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
         />
    />
</RelativeLayout>